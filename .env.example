# Kairus Platform - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# SNOWFLAKE CONFIGURATION
# =============================================================================
SNOWFLAKE_ACCOUNT=your_account.region
SNOWFLAKE_USER=your_user
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_DATABASE=your_database
SNOWFLAKE_SCHEMA=your_schema
SNOWFLAKE_WAREHOUSE=your_warehouse

# =============================================================================
# JIRA CONFIGURATION
# =============================================================================
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your_email@domain.com
JIRA_TOKEN=your_api_token

# =============================================================================
# SECURITY KEYS (Generate unique keys for production)
# =============================================================================
ETL_SECRET_KEY=your-etl-secret-key-change-this-in-production
ETL_ENCRYPTION_KEY=your-32-byte-encryption-key-here
AI_SECRET_KEY=your-ai-secret-key-change-this-in-production
BACKEND_JWT_SECRET=your-backend-jwt-secret-change-this-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=your-postgres-password

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================

# GitHub Integration (optional)
GITHUB_TOKEN=your_github_token

# Aha! Integration (optional)
AHA_URL=https://your-org.aha.io
AHA_TOKEN=your_aha_token

# Azure DevOps Integration (optional)
AZDO_URL=https://dev.azure.com/your-org
AZDO_TOKEN=your_azdo_token

# Redis Configuration (optional - uses defaults if not set)
REDIS_URL=redis://redis:6379/0

# Additional ETL Service Configuration
JIRA_JOB_INTERVAL_HOURS=24

# Backend Service Configuration
CORS_ORIGIN=http://localhost:3001

# AI Service Configuration
MODEL_STORAGE_PATH=/app/models

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
