# Pulse Platform - Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_HOST="localhost"
POSTGRES_PORT=5432
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="your-secure-password"
POSTGRES_DATABASE="pulse_db"

# =============================================================================
# JIRA CONFIGURATION
# =============================================================================
JIRA_URL="https://your-company.atlassian.net"
JIRA_USERNAME="your-email@company.com"
JIRA_TOKEN="your-jira-api-token"
JIRA_PROJECTS="PROJECT1,PROJECT2,PROJECT3"

# =============================================================================
# GITHUB CONFIGURATION
# =============================================================================
GITHUB_TOKEN="your-github-personal-access-token"
GITHUB_REPO_FILTER="your-repo-filter"

# =============================================================================
# AHA! CONFIGURATION
# =============================================================================
AHA_URL="https://your-company.aha.io"
AHA_TOKEN="your-aha-api-token"

# =============================================================================
# AZURE DEVOPS CONFIGURATION
# =============================================================================
AZDO_URL="https://dev.azure.com/YourOrg"
AZDO_TOKEN="your-azdo-personal-access-token"

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="Pulse ETL Service"
APP_VERSION="1.0.0"
DEBUG=true
LOG_LEVEL="INFO"
HOST="0.0.0.0"
PORT=8000
API_V1_STR="/api/v1"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY="your-secret-key-change-this-in-production"
ENCRYPTION_KEY="your-32-byte-encryption-key-here"

# =============================================================================
# JOB SCHEDULING CONFIGURATION
# =============================================================================
SCHEDULER_TIMEZONE="America/Chicago"

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
REDIS_URL="redis://localhost:6379/0"
CACHE_TTL_SECONDS=3600

# =============================================================================
# TERMINAL SETTINGS
# =============================================================================
FORCE_COLOR=1

# =============================================================================
# ADDITIONAL SETTINGS FOR OTHER SERVICES (if needed)
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Session Configuration
SESSION_SECRET_KEY=your-session-secret-key-here
SESSION_EXPIRE_MINUTES=480

# Note: Application rate limiting is hardcoded in main.py (100 req/60s)
# GitHub API rate limiting is handled automatically by the GitHub clients

# =============================================================================
# SERVICE COMMUNICATION CONFIGURATION
# =============================================================================

# Frontend App Settings
VITE_API_BASE_URL=http://localhost:3001
VITE_ETL_SERVICE_URL=http://localhost:8000
VITE_AI_SERVICE_URL=http://localhost:8001
VITE_APP_TITLE=Pulse Platform
VITE_ENVIRONMENT=development
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_AI_FEATURES=true

# Backend Service Settings
BACKEND_SERVICE_URL=http://localhost:3001
BACKEND_PORT=3001
BACKEND_HOST=localhost

# ETL Service Settings
ETL_SERVICE_URL=http://localhost:8000
ETL_PORT=8000
ETL_HOST=localhost

# AI Service Settings
AI_SERVICE_URL=http://localhost:8001
AI_SERVICE_PORT=8001
AI_SERVICE_HOST=localhost

# Docker Compose Settings
COMPOSE_PROJECT_NAME=pulse-platform
DOCKER_BUILDKIT=1

# Development Tools
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ENABLE_SWAGGER=true

# Logging
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log

# =============================================================================
# PRODUCTION DEPLOYMENT CONFIGURATION
# =============================================================================
# For production deployment, override these variables:
#
# POSTGRES_HOST=your-production-db-host
# VITE_API_BASE_URL=https://your-domain.com/api
# VITE_ETL_SERVICE_URL=https://your-domain.com/etl
# BACKEND_SERVICE_URL=https://your-domain.com/api
# ETL_SERVICE_URL=https://your-domain.com/etl
# CORS_ORIGINS=https://your-domain.com
#
# Example for Docker deployment:
# POSTGRES_HOST=postgres
# BACKEND_SERVICE_URL=http://backend-service:3001
# ETL_SERVICE_URL=http://etl:8000

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env in the root directory
# 2. Update all placeholder values with your actual configuration
# 3. Never commit .env files to version control
# 4. Each service will read relevant variables from this single file
# 5. Use strong, unique passwords and tokens for production
# 6. Consider using environment-specific files (.env.development, .env.production)
