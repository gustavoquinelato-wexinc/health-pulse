# Pulse Platform - Global Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# GLOBAL SETTINGS
# =============================================================================

# Application Environment
NODE_ENV=development
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# ETL SERVICE CONFIGURATION
# =============================================================================

# Application Settings
APP_NAME=Pulse ETL Service
APP_VERSION=1.0.0
API_V1_STR=/api/v1
HOST=0.0.0.0
PORT=8000

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=mysecretpassword
POSTGRES_DATABASE=pulse_db

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Scheduler Configuration
SCHEDULER_TIMEZONE=UTC

# =============================================================================
# INTEGRATION CONFIGURATIONS
# =============================================================================

# Jira Configuration
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-email@company.com
JIRA_TOKEN=your-jira-api-token

# GitHub Configuration
GITHUB_TOKEN=your-github-personal-access-token

# Aha! Configuration (Optional)
AHA_URL=https://your-company.aha.io
AHA_TOKEN=your-aha-api-key

# Azure DevOps Configuration (Optional)
AZDO_URL=https://dev.azure.com/YourOrg
AZDO_TOKEN=your-azdo-personal-access-token

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Session Configuration
SESSION_SECRET_KEY=your-session-secret-key-here
SESSION_EXPIRE_MINUTES=480

# ETL Service Security Keys
SECRET_KEY=your-secret-key-change-this-in-production
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Note: Application rate limiting is hardcoded in main.py (100 req/60s)
# GitHub API rate limiting is handled automatically by the GitHub clients

# =============================================================================
# FRONTEND APP CONFIGURATION (if using)
# =============================================================================

# Frontend App Settings
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_TITLE=Pulse Platform
VITE_ENVIRONMENT=development

# =============================================================================
# BACKEND SERVICE CONFIGURATION (if using)
# =============================================================================

# Backend Service Settings
BACKEND_PORT=3000
BACKEND_HOST=localhost
CORS_ORIGIN=http://localhost:3001

# =============================================================================
# AI SERVICE CONFIGURATION (if using)
# =============================================================================

# AI Service Settings
AI_SERVICE_PORT=8001
AI_SERVICE_HOST=localhost
MODEL_STORAGE_PATH=/app/models

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Compose Settings
COMPOSE_PROJECT_NAME=pulse-platform
DOCKER_BUILDKIT=1

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379/0

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Tools
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ENABLE_SWAGGER=true

# Logging
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log

# =============================================================================
# PRODUCTION OVERRIDES (uncomment for production)
# =============================================================================

# NODE_ENV=production
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# ENABLE_SWAGGER=false

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env in the root directory
# 2. Update all placeholder values with your actual configuration
# 3. Never commit .env files to version control
# 4. Each service will read relevant variables from this single file
# 5. Use strong, unique passwords and tokens for production
# 6. Consider using environment-specific files (.env.development, .env.production)
