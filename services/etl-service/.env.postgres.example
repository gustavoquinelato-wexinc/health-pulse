# ETL Service Configuration for PostgreSQL

# Application Settings
APP_NAME=ETL Service
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_V1_STR=/api/v1
HOST=0.0.0.0
PORT=8000

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=mysecretpassword
POSTGRES_DATABASE=kairusdb

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Jira Configuration
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-email@company.com
JIRA_TOKEN=your-jira-api-token

# GitHub Configuration (for dev status)
GITHUB_TOKEN=your-github-token

# Azure DevOps Configuration
AZDO_URL=https://dev.azure.com/YourOrg
AZDO_TOKEN=your-azdo-token

# Aha! Configuration
AHA_URL=https://yourcompany.aha.io
AHA_TOKEN=your-aha-token

# Job Scheduling Configuration
SCHEDULER_TIMEZONE=UTC
JIRA_JOB_INTERVAL_HOURS=24

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ENCRYPTION_KEY=your-secret-encryption-key-here

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600
