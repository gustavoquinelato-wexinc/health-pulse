# =============================================================================
# ETL SERVICE - ENVIRONMENT CONFIGURATION EXAMPLE
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/health_pulse_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=health_pulse_db
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password

# Database Connection Pool Settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis Configuration for caching and session management
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Security Settings
SECRET_KEY=your-secret-key-here-generate-a-secure-one
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
# ETL Service Configuration
ETL_SERVICE_HOST=0.0.0.0
ETL_SERVICE_PORT=8000
ETL_SERVICE_URL=http://localhost:8000

# Other Service URLs
BACKEND_SERVICE_URL=http://localhost:3001
AUTH_SERVICE_URL=http://localhost:3002

# =============================================================================
# INTEGRATION CREDENTIALS - MOVED TO DATABASE
# =============================================================================
# NOTE: All integration credentials (URLs, usernames, tokens, projects) are now
# stored in the database (integrations table) for security and centralized management.
# No integration credentials needed in .env files.

# =============================================================================
# JOB CONFIGURATION
# =============================================================================
# ETL Job Settings
DEFAULT_BATCH_SIZE=1000
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5
JOB_TIMEOUT_MINUTES=60

# Sync Settings
FULL_SYNC_INTERVAL_HOURS=24
INCREMENTAL_SYNC_INTERVAL_MINUTES=30
MAX_CONCURRENT_JOBS=5

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Logging Settings
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5
LOG_RETENTION_DAYS=30

# ETL-specific Logging
LOG_JOB_PROGRESS=true
LOG_API_REQUESTS=false
LOG_SQL_QUERIES=false

# =============================================================================
# PERFORMANCE AND MONITORING
# =============================================================================
# Performance Settings
REQUEST_TIMEOUT=30
API_RATE_LIMIT_PER_MINUTE=60
MAX_CONCURRENT_API_REQUESTS=10

# Monitoring Settings
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
JOB_MONITORING_ENABLED=true

# =============================================================================
# DATA PROCESSING CONFIGURATION
# =============================================================================
# Data Processing Settings
ENABLE_DATA_VALIDATION=true
ENABLE_SCHEMA_COMPATIBILITY=true
ENABLE_BULK_OPERATIONS=true
BULK_INSERT_BATCH_SIZE=1000

# Data Retention Settings
KEEP_RAW_DATA_DAYS=90
KEEP_PROCESSED_DATA_DAYS=365
ENABLE_DATA_ARCHIVING=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Security Configuration
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=
SECURE_COOKIES=false

# API Security
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=3600
ENABLE_REQUEST_VALIDATION=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature Toggle Configuration
ENABLE_REAL_TIME_SYNC=true
ENABLE_INCREMENTAL_SYNC=true
ENABLE_FULL_SYNC=true
ENABLE_DATA_EXPORT=true
ENABLE_JOB_SCHEDULING=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development-specific settings
AUTO_RELOAD=true
ENABLE_DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
ENABLE_TEST_DATA=false

# Development Job Settings
ENABLE_JOB_DEBUGGING=false
SKIP_DATA_VALIDATION=false
ENABLE_VERBOSE_LOGGING=false
