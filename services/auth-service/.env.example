# =============================================================================
# AUTH SERVICE CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and update values for your environment

# Service Configuration
AUTH_SERVICE_HOST=0.0.0.0
AUTH_SERVICE_PORT=4000

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# JWT secret key for token signing (should match backend service)
# IMPORTANT: Use the same secret key across all services for token compatibility
JWT_SECRET_KEY=A-JdcapOLIm3zoYtTkxA1vTMyNt7EEvH7jHCuDjAmqw
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# =============================================================================
# SERVICE URLS
# =============================================================================
# Development URLs
BACKEND_SERVICE_URL=http://localhost:3001
FRONTEND_SERVICE_URL=http://localhost:3000
ETL_SERVICE_URL=http://localhost:8000
AUTH_SERVICE_URL=http://localhost:4000

# Production URLs (update for production deployment)
# BACKEND_SERVICE_URL=https://api.yourcompany.com
# FRONTEND_SERVICE_URL=https://app.yourcompany.com
# ETL_SERVICE_URL=https://etl.yourcompany.com
# AUTH_SERVICE_URL=https://auth.yourcompany.com

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Development CORS origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000,http://localhost:3001

# Production CORS origins (update for production deployment)
# CORS_ORIGINS=https://app.yourcompany.com,https://etl.yourcompany.com,https://api.yourcompany.com

# =============================================================================
# COOKIE CONFIGURATION
# =============================================================================
# Cookie domain for subdomain sharing
# Development: .localhost (shares across localhost:3000, localhost:8000, etc.)
# Production: .yourcompany.com (shares across app.yourcompany.com, etl.yourcompany.com, etc.)
COOKIE_DOMAIN=.localhost
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Production cookie settings (update for production deployment)
# COOKIE_DOMAIN=.yourcompany.com
# COOKIE_SECURE=true
# COOKIE_SAMESITE=lax

# =============================================================================
# OKTA CONFIGURATION (Optional - for OKTA authentication)
# =============================================================================
# OKTA domain (e.g., dev-123456.okta.com)
OKTA_DOMAIN=

# OKTA OAuth2 credentials
OKTA_CLIENT_ID=
OKTA_CLIENT_SECRET=

# OKTA OAuth2 redirect URI
# Development
OKTA_REDIRECT_URI=http://localhost:4000/auth/okta/callback

# Production (update for production deployment)
# OKTA_REDIRECT_URI=https://auth.yourcompany.com/auth/okta/callback

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
