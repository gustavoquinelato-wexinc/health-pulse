# =============================================================================
# AUTH SERVICE - ENVIRONMENT CONFIGURATION EXAMPLE
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/health_pulse_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=health_pulse_db
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password

# Database Connection Pool Settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis Configuration for session management and caching
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Security Settings
SECRET_KEY=your-secret-key-here-generate-a-secure-one
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
# Auth Service Configuration
AUTH_SERVICE_HOST=0.0.0.0
AUTH_SERVICE_PORT=3002
AUTH_SERVICE_URL=http://localhost:3002

# Other Service URLs
BACKEND_SERVICE_URL=http://localhost:3001
ETL_SERVICE_URL=http://localhost:8000
FRONTEND_APP_URL=http://localhost:3000

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Session Settings
SESSION_TIMEOUT_MINUTES=60
SESSION_COOKIE_NAME=health_pulse_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true

# Password Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Account Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# OAUTH CONFIGURATION
# =============================================================================
# OAuth Settings (if using external authentication)
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_MICROSOFT_CLIENT_ID=your-microsoft-client-id
OAUTH_MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration for password reset emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=noreply@yourcompany.com
SMTP_FROM_NAME=Health Pulse Platform

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Logging Settings
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5
LOG_RETENTION_DAYS=30

# Auth-specific Logging
LOG_LOGIN_ATTEMPTS=true
LOG_SECURITY_EVENTS=true
LOG_SESSION_ACTIVITY=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Security Configuration
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=
SECURE_COOKIES=false

# Rate Limiting
LOGIN_RATE_LIMIT_PER_MINUTE=10
API_RATE_LIMIT_PER_MINUTE=60
ENABLE_BRUTE_FORCE_PROTECTION=true

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================
# Monitoring Settings
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
ENABLE_AUDIT_LOGGING=true

# Performance Settings
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=50

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature Toggle Configuration
ENABLE_OAUTH_LOGIN=false
ENABLE_PASSWORD_RESET=true
ENABLE_ACCOUNT_REGISTRATION=false
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_SESSION_MANAGEMENT=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development-specific settings
AUTO_RELOAD=true
ENABLE_DEBUG_MODE=false
MOCK_EMAIL_SENDING=true
SKIP_EMAIL_VERIFICATION=true

# Development Security (less strict for development)
ALLOW_WEAK_PASSWORDS=false
DISABLE_RATE_LIMITING=false
ENABLE_TEST_USERS=false
