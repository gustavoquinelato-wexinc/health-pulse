# API Endpoints
VITE_API_BASE_URL=http://localhost:3001
VITE_BACKEND_SERVICE_URL=http://localhost:3001
VITE_ETL_SERVICE_URL=http://localhost:8000
VITE_ETL_FRONTEND_URL=http://localhost:3333

# Development Settings
VITE_NODE_ENV=development
VITE_APP_NAME=Pulse Platform
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_DEBUG_LOGS=true
VITE_ENABLE_THEME_SWITCHING=true

# Portal Configuration
VITE_PORTAL_MODE=iframe
VITE_DEFAULT_THEME=light
VITE_DEFAULT_COLOR_SCHEMA=default

# =============================================================================
# COOKIE CONFIGURATION
# =============================================================================
# Cookie domain for subdomain sharing
# Development: .localhost (shares across localhost:3000, localhost:8000, etc.)
# Production: .yourcompany.com (shares across app.yourcompany.com, etl.yourcompany.com, etc.)
COOKIE_DOMAIN=.localhost
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
