# =============================================================================
# FRONTEND APP - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# ðŸ”’ SECURITY: This is a TEMPLATE file - safe to commit
# Copy to .env and customize with your actual values
#
# SETUP: cp .env.example .env

# =============================================================================
# API ENDPOINTS
# =============================================================================
# Backend Service URL (where Frontend gets data)
VITE_API_BASE_URL=http://localhost:3001
VITE_BACKEND_SERVICE_URL=http://localhost:3001

# ETL Service URL (for embedded ETL management)
VITE_ETL_SERVICE_URL=http://localhost:8000

# AI Service URL (future feature)
VITE_AI_SERVICE_URL=http://localhost:8001

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
VITE_NODE_ENV=development
VITE_APP_NAME=Pulse Platform
VITE_APP_VERSION=1.0.0
VITE_APP_TITLE=Pulse Platform
VITE_ENVIRONMENT=development

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Vite Development Server
VITE_PORT=3000
VITE_HOST=localhost

# Debug and Development Features
VITE_ENABLE_DEBUG_LOGS=true
VITE_ENABLE_THEME_SWITCHING=true
VITE_DEBUG_MODE=true
VITE_SHOW_DEV_TOOLS=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Core Features
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANALYTICS=true

# UI Features
VITE_ENABLE_THEME_SWITCHING=true

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
# Portal Configuration
VITE_PORTAL_MODE=iframe
VITE_DEFAULT_THEME=light
VITE_DEFAULT_COLOR_SCHEMA=default

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Vite build settings
VITE_BUILD_TARGET=es2020
VITE_BUILD_OUTDIR=dist

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Set these for production deployment
# VITE_API_BASE_URL=https://your-backend-domain.com
# VITE_ETL_SERVICE_URL=https://your-etl-domain.com
# VITE_AI_SERVICE_URL=https://your-ai-domain.com
# VITE_APP_TITLE=Your Company - Pulse Platform
# VITE_ENVIRONMENT=production
# VITE_ENABLE_DEBUG_LOGS=false
# VITE_DEBUG_MODE=false
# VITE_SHOW_DEV_TOOLS=false

# =============================================================================
# NOTES
# =============================================================================
# 1. All VITE_ variables are PUBLIC and exposed to the browser
# 2. NEVER put secrets in this file - they will be visible to users
# 3. This file is safe to commit to version control
# 4. Frontend gets service URLs but no authentication secrets
# 5. Authentication is handled by Backend Service via cookies/tokens
# 6. For production, update URLs to use your actual domain names
# 7. Feature flags allow you to enable/disable functionality per environment
