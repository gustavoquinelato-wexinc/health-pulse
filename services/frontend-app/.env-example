# =============================================================================
# FRONTEND APP - ENVIRONMENT CONFIGURATION EXAMPLE
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment Settings
NODE_ENV=development
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# SERVICE URLS
# =============================================================================
# Backend Service Configuration
REACT_APP_BACKEND_SERVICE_URL=http://localhost:3001
REACT_APP_API_BASE_URL=http://localhost:3001/api/v1

# ETL Service Configuration
REACT_APP_ETL_SERVICE_URL=http://localhost:8000

# Auth Service Configuration
REACT_APP_AUTH_SERVICE_URL=http://localhost:3002

# Frontend App Configuration
REACT_APP_FRONTEND_URL=http://localhost:3000
PORT=3000
HOST=0.0.0.0

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API Settings
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRY_ATTEMPTS=3
REACT_APP_API_RETRY_DELAY=1000

# WebSocket Configuration
REACT_APP_WEBSOCKET_URL=ws://localhost:3001/ws
REACT_APP_ENABLE_WEBSOCKETS=true

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Auth Settings
REACT_APP_JWT_STORAGE_KEY=health_pulse_token
REACT_APP_SESSION_TIMEOUT_MINUTES=60
REACT_APP_AUTO_LOGOUT_WARNING_MINUTES=5

# OAuth Settings (if using external authentication)
REACT_APP_OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
REACT_APP_OAUTH_MICROSOFT_CLIENT_ID=your-microsoft-client-id

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
# Theme Settings
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_THEME_SWITCHING=true

# Branding
REACT_APP_APP_NAME=Health Pulse Platform
REACT_APP_APP_VERSION=1.0.0
REACT_APP_COMPANY_NAME=Your Company Name
REACT_APP_SUPPORT_EMAIL=support@yourcompany.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature Toggle Configuration
REACT_APP_ENABLE_AI_FEATURES=true
REACT_APP_ENABLE_REAL_TIME_UPDATES=true
REACT_APP_ENABLE_ADVANCED_ANALYTICS=true
REACT_APP_ENABLE_EXPORT_FEATURES=true
REACT_APP_ENABLE_INTEGRATION_MANAGEMENT=true
REACT_APP_ENABLE_USER_MANAGEMENT=true

# Dashboard Features
REACT_APP_ENABLE_CUSTOM_DASHBOARDS=true
REACT_APP_ENABLE_DASHBOARD_SHARING=true
REACT_APP_ENABLE_WIDGET_CUSTOMIZATION=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Performance Settings
REACT_APP_ENABLE_LAZY_LOADING=true
REACT_APP_ENABLE_CODE_SPLITTING=true
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_ENABLE_PWA=false

# Data Loading
REACT_APP_DEFAULT_PAGE_SIZE=25
REACT_APP_MAX_PAGE_SIZE=100
REACT_APP_ENABLE_INFINITE_SCROLL=false

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
# Analytics Configuration
REACT_APP_GOOGLE_ANALYTICS_ID=your-ga-tracking-id
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_TRACKING=true

# Performance Monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false
REACT_APP_PERFORMANCE_SAMPLE_RATE=0.1

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development-specific settings
REACT_APP_ENABLE_DEBUG_MODE=true
REACT_APP_SHOW_REDUX_DEVTOOLS=true
REACT_APP_ENABLE_HOT_RELOAD=true
REACT_APP_MOCK_API_RESPONSES=false

# Development Tools
REACT_APP_ENABLE_COMPONENT_INSPECTOR=false
REACT_APP_ENABLE_ACCESSIBILITY_CHECKER=false
REACT_APP_ENABLE_PERFORMANCE_PROFILER=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Security Configuration
REACT_APP_ENABLE_CSP=false
REACT_APP_ENABLE_HTTPS_ONLY=false
REACT_APP_ENABLE_SECURE_COOKIES=false

# Content Security
REACT_APP_ALLOWED_HOSTS=["localhost", "127.0.0.1"]
REACT_APP_ENABLE_XSS_PROTECTION=true

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================
# External Integration Settings
REACT_APP_ENABLE_JIRA_INTEGRATION=true
REACT_APP_ENABLE_GITHUB_INTEGRATION=true
REACT_APP_ENABLE_SLACK_INTEGRATION=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Client-side Logging
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_CONSOLE_LOGGING=true
REACT_APP_ENABLE_REMOTE_LOGGING=false
REACT_APP_LOG_API_REQUESTS=false

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Build Settings
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=10000

# Bundle Analysis
ANALYZE_BUNDLE=false
BUNDLE_ANALYZER_PORT=8888

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Caching Settings
REACT_APP_ENABLE_API_CACHING=true
REACT_APP_CACHE_DURATION_MINUTES=15
REACT_APP_ENABLE_OFFLINE_SUPPORT=false
