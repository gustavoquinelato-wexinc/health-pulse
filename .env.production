# Pulse Platform - Production Environment Configuration
# Copy this file to .env and update values for production deployment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_HOST="your-production-db-host"
POSTGRES_PORT=5432
POSTGRES_USER="pulse_user"
POSTGRES_PASSWORD="your-secure-password"
POSTGRES_DATABASE="pulse_db"

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="Pulse ETL Service"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL="INFO"
HOST="0.0.0.0"
PORT=8000
API_V1_STR="/api/v1"

# =============================================================================
# JOB SCHEDULING CONFIGURATION
# =============================================================================
SCHEDULER_TIMEZONE="America/Chicago"

# =============================================================================
# TERMINAL SETTINGS
# =============================================================================
FORCE_COLOR=1

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_SECRET_KEY="your-production-session-secret-key"
SESSION_EXPIRE_MINUTES=480

# =============================================================================
# SERVICE COMMUNICATION CONFIGURATION
# =============================================================================

# Frontend App Settings
VITE_API_BASE_URL=https://your-domain.com/api
VITE_ETL_SERVICE_URL=https://your-domain.com/etl
VITE_AI_SERVICE_URL=https://your-domain.com/ai
VITE_APP_TITLE=Pulse Platform
VITE_ENVIRONMENT=production
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_AI_FEATURES=true

# Backend Service Settings
BACKEND_SERVICE_URL=https://your-domain.com/api
BACKEND_PORT=3001
BACKEND_HOST=0.0.0.0

# ETL Service Settings
ETL_SERVICE_URL=https://your-domain.com/etl
ETL_PORT=8000
ETL_HOST=0.0.0.0

# AI Service Settings
AI_SERVICE_URL=https://your-domain.com/ai
AI_SERVICE_PORT=8001
AI_SERVICE_HOST=0.0.0.0

# =============================================================================
# DOCKER DEPLOYMENT CONFIGURATION
# =============================================================================
# For Docker Compose deployment, use service names:
# POSTGRES_HOST=postgres
# BACKEND_SERVICE_URL=http://backend-service:3001
# ETL_SERVICE_URL=http://etl:8000
# AI_SERVICE_URL=http://ai:8001

# =============================================================================
# SECURITY CONFIGURATION (PRODUCTION)
# =============================================================================
SECRET_KEY="your-production-secret-key-change-this"
ENCRYPTION_KEY="your-production-encryption-key-32-bytes"
JWT_SECRET_KEY="your-production-jwt-secret-key"
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
ENABLE_CORS=true
CORS_ORIGINS=https://your-domain.com
ENABLE_SWAGGER=false

# Cache Configuration
REDIS_URL="redis://your-redis-host:6379/0"
CACHE_TTL_SECONDS=3600

# Docker Compose Settings
COMPOSE_PROJECT_NAME=pulse-platform
DOCKER_BUILDKIT=1

# Logging
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log

# =============================================================================
# EXTERNAL SERVICES (UPDATE WITH YOUR CREDENTIALS)
# =============================================================================
JIRA_URL="https://your-company.atlassian.net"
JIRA_USERNAME="your-jira-email"
JIRA_TOKEN="your-jira-token"
JIRA_PROJECTS="PROJECT1,PROJECT2"

GITHUB_TOKEN="your-github-token"
GITHUB_REPO_FILTER="your-repo-filter"

AHA_URL="https://your-company.aha.io"
AHA_TOKEN="your-aha-token"

AZDO_URL="https://dev.azure.com/YourOrg"
AZDO_TOKEN="your-azdo-token"

# =============================================================================
# DEPLOYMENT NOTES
# =============================================================================
# 1. Update all "your-domain.com" references with your actual domain
# 2. Generate secure random keys for SECRET_KEY, ENCRYPTION_KEY, JWT_SECRET_KEY
# 3. Use environment-specific database hosts (not localhost)
# 4. For Docker: use service names instead of localhost
# 5. For Kubernetes: use service DNS names
# 6. Disable DEBUG and ENABLE_SWAGGER in production
# 7. Use HTTPS URLs in production
