# =============================================================================
# HEALTH PULSE PLATFORM - ENVIRONMENT CONFIGURATION EXAMPLE
# =============================================================================
# Copy this file to .env and update the values for your environment
# This file shows all available configuration options

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/health_pulse_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=health_pulse_db
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password

# Database Connection Pool Settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis Configuration for caching and session management
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Security Settings
SECRET_KEY=your-secret-key-here-generate-a-secure-one
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# =============================================================================
# SERVICE PORTS AND URLS
# =============================================================================
# Backend Service Configuration
BACKEND_SERVICE_HOST=0.0.0.0
BACKEND_SERVICE_PORT=3001
BACKEND_SERVICE_URL=http://localhost:3001

# ETL Service Configuration
ETL_SERVICE_HOST=0.0.0.0
ETL_SERVICE_PORT=8000
ETL_SERVICE_URL=http://localhost:8000

# Auth Service Configuration
AUTH_SERVICE_HOST=0.0.0.0
AUTH_SERVICE_PORT=3002
AUTH_SERVICE_URL=http://localhost:3002

# Frontend Application Configuration
FRONTEND_APP_HOST=0.0.0.0
FRONTEND_APP_PORT=3000
FRONTEND_APP_URL=http://localhost:3000

# =============================================================================
# INTEGRATION API CREDENTIALS
# =============================================================================
# Jira Configuration (WEX instance) - Required for AI coaching rules
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-email@company.com
JIRA_TOKEN=your-jira-api-token-here

# NOTE: Other integration credentials (GitHub, Aha!, Azure DevOps) are now stored 
# in the database (integrations table) for security and centralized management.

# Jira Configuration for Augment Agent (non-sensitive configuration)
JIRA_PROJECT_KEY_FOR_AUGMENT_AGENT=YOUR_PROJECT_KEY
JIRA_TEAM_FIELD_FOR_AUGMENT_AGENT=Agile Team[Dropdown]
JIRA_TEAM_VALUE_FOR_AUGMENT_AGENT=Your Team Name

# Jira Workflow Configuration
JIRA_SUBTASK_WORKFLOW=Backlog,Development,Released
JIRA_STORY_WORKFLOW=Backlog,Refining,To Do,Development,Code review,Ready for Story Testing,Story Testing,Ready for Acceptance,Acceptance Testing,Ready for Production,Released
JIRA_EPIC_WORKFLOW=Backlog,Development,Deployed to Production,Released

# Jira Resolution Configuration
JIRA_STORY_RESOLUTION_REQUIRED=true
JIRA_SUCCESS_RESOLUTION=Done
JIRA_ABANDONED_RESOLUTION=Won't Do

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# OpenAI API Configuration for AI features
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=noreply@yourcompany.com
SMTP_FROM_NAME=Health Pulse Platform

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Logging Settings
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5
LOG_RETENTION_DAYS=30

# =============================================================================
# PERFORMANCE AND MONITORING
# =============================================================================
# Performance Settings
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=100
RATE_LIMIT_PER_MINUTE=60

# Monitoring Settings
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
PROFILING_ENABLED=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development-specific settings
AUTO_RELOAD=true
SHOW_SQL_QUERIES=false
ENABLE_DEBUG_TOOLBAR=false
MOCK_EXTERNAL_APIS=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Security Configuration
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=
SECURE_COOKIES=false
SESSION_TIMEOUT_MINUTES=60

# API Security
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=3600
ENABLE_API_VERSIONING=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature Toggle Configuration
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_EXPORT_FEATURES=true
ENABLE_INTEGRATION_SYNC=true
